---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Conheça nossa equipe formada por engenheiros de software apaixonados por inovação e tecnologia de impacto";

import p1 from "./../../assets/team/t1.jpeg";
import p2 from "../../assets/team/t2.jpeg";

const team = [
  {
    pic: p1,
    name: "Matheus Perozini",
    role: "Engenheiro de Software",
    description:
      "Especialista em desenvolvimento de software e inteligência artificial",
    link: "https://linkedin.com",
  },
  {
    pic: p2,
    name: "Adilson Junior",
    role: "Engenheiro de Software",
    description:
      "Especialista em desenvolvimento de software e processamento de imagens",
    link: "https://www.linkedin.com/in/adilsonjunior4/",
  }
];
---

<Section id="about">
  <div class="mt-[140px] mb-20">
    <SectionTitle sectionTitle="Equipe" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-2 grid-rows-1 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
  </div>
</Section>
